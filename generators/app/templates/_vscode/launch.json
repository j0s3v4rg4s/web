    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch typescript",
            "program": "${workspaceFolder}/src/index.ts",
            "stopOnEntry": false,
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "nodemon",
            "restart": true,
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch javascript",
            "program": "${workspaceFolder}/out/index.js",
            "stopOnEntry": false,
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "tsc",
            "runtimeExecutable": "nodemon",
            "restart": true,
            "sourceMaps": true
        }
    ]
}